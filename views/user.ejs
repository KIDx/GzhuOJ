<!--<html>-->
<% var cnt = 0, X = false, Y = false;   %>
<% if (user && user.privilege) {        %>
<%   var ch = user.privilege.charAt(0); %>
<%   if (ch > '7' && (!u.privilege || ch > u.privilege.charAt(0))) { %>
<%     Y = true; if (ch == '9') X = true; } }%>

<% var img = '/img/avatar/%3Ddefault%3D/1.jpeg'; %>
<% if (u.imgType) { img = '/img/avatar/'+u.name+'/1.'+u.imgType; } %>

<fieldset>
  <div><legend>用户</legend></div>
  <div style="position:relative;">
    <div class="menu-list">
      <ul>
        <li><a href="/user/<%= u.name %>"><%= u.name %></a></li>
        <% if (user && user.name == u.name) { %>
        <li><a href="javascript:;" id="set">settings</a></li>
        <li><a href="/avatar">设置头像</a></li>
        <% } %>
        <li><a href="/status?name=<%= u.name %>">submissions</a></li>
      </ul>
    </div>
    <div class="roundbox avatar_box">
      <div class="avatar"><img alt="avatar" src="<%= img %>" /></div>
      <h3>
        <span id="usercol" name="<%= u.name %>" <% if (u.privilege) { %>pvl="<%= u.privilege %>"<% } %>>&nbsp;</span>
      <% if (X || Y) { %>
        <select style="margin:0 10px;" class="input-medium">
        <% if (X) { %>
          <option value="82">老师</option>
          <option value="81">队长</option>
          <option value="73">贵宾</option>
        <% } %>
        <% if (Y) { %>
          <option value="72">资深队员</option>
          <option value="71">普通队员</option>
          <option value="70">本校学生</option>
        <% } %>
          <option value="" selected>取消认证</option>
        </select>
        <% if (X) { %>
        <select id="college" style="margin:0;">
          <% C.forEach(function(p, i){ %>
          <option value="<%= i %>" <% if (u.college == i) { %>selected<% } %>>
            <%= p %>
          </option>
          <% }); %>
        </select>
        <% } %>
        <button class="btn" id="submit">提交</button>
      <% } %>
      <% if (user && user.name == 'admin') { %>
        <button style="margin-left:20px;" class="btn" id="addprob"><% if(u.addprob == 1) { %>回收<% } else { %>赋予<% } %>加题权限</button>
      <% } %>
      </h3>
      <span class="user-gray" title="nick name"><%= u.nick %></span>
      <ul class="user-info">
      <% if(u.signature) { %>
        <li>Signature: <%= u.signature %></li>
      <% } %>
        <li>Rank: <%= u.rank %></li>
        <li>Solved: <%= u.solved %></li>
        <li>Submissions: <%= u.submit %></li>
      <% if(u.email) { %>
        <li>Email: <%= u.email %></li>
      <% } %>
      <% if(u.school) { %>
        <li>School: <%= u.school %></li>
      <% } %>
        <li>Register Time: <%= u.regTime %></li>
      <% if(u.number) { %>
        <li>学号: <%= u.number %></li>
      <% } %>
      <% if(u.realname) { %>
        <li>姓名: <%= u.realname %></li>
      <% } %>
      <% if(u.sex) { %>
        <li>性别: <% if (u.sex=='0') { %>男<% } else { %>女<% } %></li>
      <% } %>
      <% if(u.college) { %>
        <li>学院: <%= C[u.college] %></li>
      <% } %>
      <% if(u.grade) { %>
        <li>班级: <%= u.grade %>班</li>
      <% } %>
        <li>AddProblem: <% if(u.addprob == 1) { %>YES<% } else { %>NO<% } %></li>
      </ul>
    </div>
    <div class="tablebg mylist">
      <div id="header">
        List of <span class="success-text">solved</span> problems
      </div>
      <div id="tablediv">
      <% if (A.length == 0) { %>
        <span class="error-text">No problems has been solved :(</span>
      <% } %>
      <% for (var i = 0; i < A.length; i++) { %>
        <a href="/problem?pID=<%= A[i] %>"><%= A[i] %></a>
      <% } %>
      </div>
    </div>
    <div class="tablebg mylist">
      <div id="header">
        List of <span class="error-text">unsolved</span> problems
      </div>
      <div id="tablediv">
      <% if (B.length == 0) { %>
        <p class="success-text">No unsolved problems :)</p>
      <% } %>
      <% for (var i = 0; i < B.length; i++) { %>
        <a href="/problem?pID=<%= B[i] %>"><%= B[i] %></a>
      <% } %>
      </div>
    </div>
  </div>
  <%- partial('settings', {u:u}) %>
</fieldset>