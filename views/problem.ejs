<!--<html>-->
<fieldset>
  <div><legend>内容</legend></div>
<% if (!problem) { %>
  <div class="alert alert-error" style="padding:100px;display:none;">
    <h1 align="center">The Problem is not Available!!</h1>
  </div>
<% } else { %>
  <div class="thumbnail" style="padding:1em;"> 
    <div id="sidebar" pid="<%= problem.problemID %>">
      <div class="sidebox">
        <div class="side-header">→ Information</div>
        <ul class="info">
          <li>Solved Number: <%= problem.AC %></li>
          <li>Submit Number: <%= problem.submit %></li>
        </ul>
      </div>
    <% if (user) { %>
      <div class="sidebox">
        <div class="side-header">→ Submit</div>
        <div class="sidegroup">
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td>Language:</td>
              <td>
                <select class="side-input" id="lang">
                  <option value='1'>C</option>
                  <option value='2' selected="selected">C++</option>
                  <option value='3'>Java</option>
                </select>
              </td>
            </tr>
            <tr>
              <td>Choose file:</td>
              <td>
                <span class="uibtn upload-btn">
                  <span>选择文件</span>
                  <input type="file" id="file" name="info" data-url="/problem?pid=<%= problem.problemID %>" />
                </span>
                <span id="upload-info" class="upload-info">未选择文件</span>
            </td>
            </tr>
            <tr>
              <td></td>
              <td>
                <button id="submit" class="uibtn">
                  submit
                </button>
              </td>
            </tr>
            <tr>
              <td></td>
              <td>
                <span id="error" class="error-text">&nbsp;</span>
              </td>
            </tr>
          </table>
        </div>
      </div>
    <% } %>
      <div id="activebox" class="sidebox">
        <div class="side-header">→ Problem tags</div>
        <div id="#" style="padding:.5em;">
          <% problem.tags.forEach(function(p){ %>
          <div class="tag-box" title="<%= PT[p] %>">
            <%= Tag[p] %>
            <% if(pvl == 1) { %><span class="del" tag="<%= p %>">×</span><% } %>
          </div>
          <% }); %>
          <div style="text-align:right;clear:both;">
          <% if(pvl == 1) { %>
            <div class="hidden">Add tag:
              <select class="side-input">
                <% Tag.forEach(function(p, i){ %>
                <option value="<%= i %>"><%= p %></option>
                <% }); %>
              </select>
            </div>
            <a href="javascript:;" id="add-tag">Add tag</a>
          <% } else { %>
            <span class="user-gray">No tag edit access</span>
          <% } %>
          </div>
        </div>
      </div>
    </div>
    <div class="istyle" style="padding-left:1em;margin-left:20em;border-left:1px solid #ddd">
      <h3 class="problem-header"><%= problem.title %></h3>
      <div class="prob-info" align="center">
      <% if (problem.spj === 1) { %>
        <b style="color:#D14758;">Special Judge</b> &nbsp;&nbsp;&nbsp;&nbsp; 
      <% } %>
        <b>Time Limit: </b><%= 2*problem.timeLimit %>/<%= problem.timeLimit %> MS (Java/Others)
        &nbsp;&nbsp;&nbsp;&nbsp; <b>Memory Limit: </b><%= 2*problem.memoryLimit %>/<%= problem.memoryLimit %> KB (Java/Others)
      </div>
      <div style="padding-top:10px;" align="center">
        <a class="uibtn checklogin" href="javascript:;" pid="<%= problem.problemID %>" id="gotosubmit">Submit</a>
        <a class="uibtn" href="/statistic/<%= problem.problemID %>">Statistic</a>
        <a class="uibtn" href="/problem?pid=<%= problem.problemID+1 %>">Next Problem</a>
        <% if (user) { %>
          <% if (user.addprob == 1) { %><a class="uibtn" href="/addproblem?pID=<%= problem.problemID %>">Edit Problem</a><% } %>
          <% if (user.name == 'admin'|| user.name == problem.manager) { %><a class="uibtn" href="javascript:;" id="rejudge">Rejudge</a><% } %>
        <% } %>
      </div>
  <% var S = ['Problem Description', 'Input', 'Output', 'Sample Input', 'Sample Output', 'Hint', 'Source', 'Manager']; %>
  <% var q = [problem.description, problem.input, problem.output, problem.sampleInput, problem.sampleOutput, problem.hint, problem.source, problem.manager]; %>
  <% for (var i in S) if (q[i]) { %>
      <h4><%= S[i] %></h4>
      <div class="accordion-inner ">
      <% if (i == 3 || i == 4) { %><pre class="sample"><%= q[i] %></pre>
      <% } else { %><%- q[i] %><% } %>
      </div>
  <% } %>
      <div align="center" style="padding-bottom: 20px;">
        <a class="uibtn checklogin" href="javascript:;" pid="<%= problem.problemID %>" id="gotosubmit">Submit</a>
        <a class="uibtn" href="/statistic?pID=<%= problem.problemID %>">Statistic</a>
      </div>
    </div>
  </div>
<% } %>
</fieldset>
